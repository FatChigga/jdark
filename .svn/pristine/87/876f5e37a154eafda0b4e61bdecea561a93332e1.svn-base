a{
    display: block;
    width: 1px;
    height:1px;
    position: absolute;
    opacity: 0;
    z-index: 0;
}
img{
    display: block;
}
html{
    width: 100%;
    height: 100%;
}
body{
    background: url(../Images/video-bg.jpg) 0 0 no-repeat;
    background-size: 100% 100%;
    padding-top: 40px;
    width: 100%;
}
.main{
    width: 1152px;
    margin: 0 auto;
    height: 645px;
    position: relative;
    z-index: 1;
}
.title{
    font-size:26px;
    color: #fff;
    line-height: 38px;
    margin-bottom: 86px;
}
.videos{
    float: left;
    width: 768px;
    height: 430px;
    position: relative;
    background: url(../Images/video-bg-pic.jpg) 0 0 no-repeat;
    background-size: 100% 100%;
}
.video{
    width: 768px;
    height: 430px;
}
.video-pic{
    position: absolute;
    width: 768px;
    height: 430px;
    left: 0;
    top: 0;
}
.video-pic img{
    display: block;
    width: 768px;
    height: 430px;
}

/*è§†é¢‘å³è¾¹*/
.content{
    position: relative;
    width: 372px;
    float: right;
    height: 430px;
    background: rgba(0,0,0,.3);
}
.introduce{
    margin-bottom: 40px;
}
.introduce,.position,.btns{
    width: 328px;
    margin: 0 auto;
}
.introduce h3{
    color: #fff;
    font-size: 22px;
    line-height: 22px;
    margin-bottom: 12px;
    padding-top: 22px;
}

.intro-text{
    color: #d3d2d2;
    font-size: 16px;
    line-height: 25px;
    margin-bottom: 46px;
    letter-spacing: 1px;
}
.introduce .intro-text{
    color: #f3f2f2;
    margin-bottom: 22px;
    max-height: 100px;
    overflow:hidden;
}
.position{
    font-size: 16px;
    margin-bottom: 20px;
    line-height: 24px;
}
.position h3{
    color: #fff;
    font-size: 16px;
}
.position .intro-text{
    margin-bottom: 10px;
    height: 50px;
    overflow:hidden;
}
.btn{
    width: 275px;
    height: 45px;
    margin: 0 auto;
    background: url(../Images/video-bg-li.jpg) 0 0 repeat-x;
    background-size: 1px 100%;
    margin-top: 30px;
    border:1px solid #737373;
}
.btn a{
    opacity: 0;
    z-index: 0;
}
.btn-p{
    color: #fff;
    width: 275px;
    height: 45px;
    text-align: center;
    line-height: 45px;
    font-size: 19px;
    letter-spacing: 2px;
    cursor: pointer;
    position: relative;
    z-index: 3;
}
.btn-p.focus{
    border: 3px #fff solid;
    line-height: 41px;
    height: 41px;
    width: 270px;
    box-shadow: 0 0 10px 4px rgba(61,146,255,.6);
    z-index: 999;
}

/*å¼¹æ¡†*/
.pop{
    display: none;
    position: absolute;
    right: 0;
    top: 0;
    z-index: 999;
    background: rgba(255,255,255,1);
    width: 372px;
    height: 430px;
}
.popHide.pop{
    display: block;
}
.pop-con{
    width: 372px;
    height: 430px;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 999;
}
.pop-t{
    font-size: 30px;
    line-height: 30px;
    padding-top: 50px;
    padding-bottom: 28px;
    text-align: center;
  
}
.code-pic,.code-pic img{
    width: 173px;
    height: 173px;
    margin: 0 auto;
}
.pop-notes{
    text-align: center;
    font-size: 18px;
    color: #242424;
    margin-top: 35px;
   
}
.pop-notes span{
    color: #3795ff;
}
.pop-del{
    float: right;
    cursor: pointer;
    margin-right: 80px;
    font-size: 20px;
    margin-top: -10px;
}
.pop-del a div{
    width: 60px;
    text-align: center;
    text-decoration: underline;
}

/*ç„¦ç‚¹è¾¹æ¡†æ ·å¼*/
.video.focus{
    border: 3px #fff solid;
    margin-top: -3px;
    margin-left: -3px;
    position: relative;
    z-index:15;
    box-shadow: 0 0 10px 4px rgba(61,146,255,.8);
    z-index: 999;
}
.pop-con>a{
    width: 570px;
    height: 370px;
    margin: 0 auto; 
    position: absolute;
    left: 4px;
    top: 5px;
}
.pop-con>a:focus{
    z-index: 999; 
    position: relative;
    border: 2px #fff solid;
}

