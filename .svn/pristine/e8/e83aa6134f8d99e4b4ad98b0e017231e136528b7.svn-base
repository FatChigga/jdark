.header{
    position: relative;
}
a{
    /*position: absolute;*/
    width:1px;
    height:1px;
    z-index: 0;
}
html,body{
    background: url("../images/bg.jpg") no-repeat;
    background-size: 100% 100%;
    width:100%;
    height:100%;
}
.header a{
    color: #ffffff;
    display: block;
    position: absolute;
    left:0;
    top:0;
}
.main{
    width:1152px;
    margin:0 auto;
}
.link.focus ,a .link{
    /*position: absolute;*/
    width:100%;
    height:100%;
    left:0;
    top:0;
}
.top .header{
    font-size: 26px;
    color: #ffffff;
    height:110px;
    line-height: 110px;
}
.nav{
    position: relative;
    /* height: 164px; */
    /* padding: 0 17px; */
    width: 1070px;
    margin:0 auto;
    white-space: nowrap;
    border:1px solid rgba(255,255,255,0.1);
}
.nav .hidden{
    overflow: hidden;
}
.nav .items .item{
    float: left;
    margin-right: 8px;
    height:150px;
    width:200px;
    position: relative;
    border-bottom: 1px solid #4B4B4B;
}
.nav .items{
    width:1032px;
    height: 150px;
    overflow: hidden;
    padding: 24px 0;
    margin:0 auto;
    padding-left: 8px;
    padding-right: 8px;
}
.nav .item img{
    display: block;
    width: 100%;
    height: 100%;
}
.nav .item .info{
    position: absolute;
    width:100%;
    height:46px;
    background: url("../images/search_info.png") repeat;
    background-size: 2px 46px;
    left:0;
    bottom:0;
    color:#ffffff;
    line-height: 46px;
}
.overflow{
    /* height:100%; */
    /*overflow: hidden;*/
    float: left;
}
.nav .item .info .name{
    font-size: 19px;
    padding:0 10px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.nav .item .info .name span{
    color:#3795FF;
}

.nav .item .info .js{
    font-size: 15px;
    color: #787878;
    padding:0 10px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    padding-bottom: 8px;
}
.nav .more .link{
    width:200px;
    height:148px;
    text-align: center;
    line-height: 150px;
    position: relative;
    border: 1px solid #CCCCCC;
    /*display: inline-block;*/
    background-color: rgba(0,0,0,0.2);
}
.nav .more{
    width:200px;
    height:148px;
    float: left;
}
.nav .more span{
    font-size: 16px;
    color: #ffffff;
    text-decoration: underline;
}
.nav .arrow{
    width:20px;
    height:30px;
    position: absolute;
    top:84px;
}
.nav .arrow img{
    display: block;
    width: 100%;height:100%;
}
.nav .arrow.arrow_left{
    left:-34px;
}
.nav .arrow.arrow_right{
    right:-34px;
}
.enter{
    overflow: hidden;
    padding:32px 0;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
    justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
}
.enter>div{
    float: left;
    position: relative;
    margin:0 18px;
    height: 40px;
}
.enter .input input,.enter .input span{
    width:534px;
    height:40px;
    color: #ffffff;
    line-height: 40px;
    font-size: 26px;
    background-color: rgba(0,0,0,0);
    outline: none;
    border: 1px solid #E3E5E9;
    padding:0 24px;
    display: block;
}
.enter .input{
    width:614px;
    margin-right: 18px;
}
.sure .link,.clear .link{
    width:100%;
    height:40px;
    line-height: 40px;
    border:1px solid #ffffff;
    text-align: center;
    color: #ffffff;
    position: absolute;
    left: 0;
    top: -1px;
    background: url("../images/video-btn-bgli.jpg") repeat;
    background-size: 1px 45px;
}
.sure{
    width:80px;
}
.clear{
    width:114px;
}

.keyboard{
    width:1046px;
    padding:18px;
    border: 1px solid #879FB0;
    margin:0 auto;
    overflow: hidden;
}
.keyboard ul{
    overflow: hidden;
    padding:7px 0;
    padding-left: 24px;
    background-color: rgba(0,0,0,0.2);
    border-radius: 8px;
}
.keyboard ul li{
    float: left;
    width:54px;
    height:48px;
    margin:11px 8px;
    position: relative;
}
.keyboard ul li .link span{
    display: block;
    width:100%;
    height:100%;
    text-align: center;
    line-height:48px;
    color: #ffffff;
    font-size: 24px;
}
.keyboard .english{
    width:695px;
    float: left;
}
.keyboard .num{
    float: right;
    width:325px;
}
.keyboard ul li.chinese span{
    font-size: 15px;
}

.keyboard ul li .link{
    border: 1px solid #C0C4C8;
    border-radius: 8px;
}
.keyboard ul li a:focus .link,.enter a:focus .link{
    color:#3785DC;
    border:1px solid #3785DC;
}
.keyboard ul li .link.focus,.enter .link.focus{
    color:#3785DC;
    border:1px solid #3785DC;
}
.keyboard ul li a:focus .link span{
    color:#3785DC;
}
.keyboard ul li .link.focus span{
    color:#3785DC;
}
.items .item a{
    display: block;
}
.items .item .link{
    position: absolute;
    left:0;
    top:0;
    z-index: 5;
    width:100%;
    height:100%;
}
.items .item .link.focus,.more .link.focus,
.items .item a:focus .link,.more a:focus .link{
    width: 210px;
    height:160px;
    border:2px solid #ffffff;
    box-shadow: 0 0 10px rgba(61, 146, 255,0.8);
    border-radius: 8px;
    z-index: 9;
    overflow: hidden;
    left:-7px;
    top:-5px;
}
.items .item a:focus .link img{
    border-radius: 8px;
}
.items .item .link.focus img{
    border-radius: 8px;
}
.enter a{
    display: block;
}
.arrow .link{
    width:20px;
    height:30px;
    left:0;
    top:0;
    z-index: 9;
    position: absolute;
    /*background-color: #313437;*/
}
.arrow a{
    display: block;
}
.keyboard ul li .link {
    position: absolute;
    left:0;
    top:0;
    width: 100%;
    height: 100%;
}
.keyboard a{
    display: block;
}
.arrow a:focus .link{
    width:26px;
    height:39px;
}
.arrow a:focus .link{
    width:26px;
    height:39px;
}
.arrow .link.focus{
    width:26px;
    height:39px;
}
/*.more a .link{*/
/*position: absolute;*/
/*}*/
/*.more .link.focus{*/
/*position: absolute;*/
/*}*/
.more a{
    display: block;
}
.items .item a:focus .img, .more a:focus .img{
    width:100%;
    height:100%;
}
a{
    opacity: 0;
}
.nav .img{
    display: block;
    width:100%;
    height:100%;
}

.hint{
    width: 200px;
    height: 148px;
    text-align: center;
    line-height: 150px;
    position: relative;
    border: 1px solid #CCCCCC;
    /* display: inline-block; */
    background-color: rgba(0,0,0,0.2);
    margin:0 auto;
    border-radius: 8px;
}
.hint .link span{
    font-size: 16px;
    color: #ffffff;
    text-decoration: underline;
}