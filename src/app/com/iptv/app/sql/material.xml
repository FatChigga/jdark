<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="material">
	<select id="getMaterialListPaged" resultType="java.util.HashMap">
		SELECT m.Id,m.Code,m.Name,m.Count FROM `biz_material` m
	</select>
	
	<select id="getMaterialById" resultType="java.util.HashMap" parameterType="java.util.HashMap">
		SELECT m.Id,m.Code,m.Name,m.Count FROM `biz_material` m WHERE m.Id = #{Id}
	</select>
	
	<insert id="saveMaterial" parameterType="java.util.HashMap">
		INSERT INTO `biz_material` (Code,Name,Count)
		VALUES (#{Code},#{Name},#{Count})
	</insert>
	
	<update id="updateMaterial" parameterType="java.util.HashMap">
		UPDATE `biz_material` SET Code = #{Code},Name=#{Name},Count=#{Count} WHERE Id = #{Id}
	</update>
	
	<delete id="deleteMaterial" parameterType="java.util.HashMap">
		DELETE FROM `biz_material` WHERE ID IN
		  <foreach collection="Id" index="index" item="item" open="(" separator="," close=")">  
            #{item}   
		 </foreach>
	</delete>
</mapper>